<section class="hero-home">
  <div class="container-hero margin-container-home">
    <div class="text-home-container">
      <h1 class="title-1 title-1--purple padding-section"><%= @results.fragments["title"].as_text() %></h1>
      <p class="subtext-hero"><%= @results.fragments["subtitle"].as_text() %></p>

      <div class="hide-mobile">
        <div class="d-flex">
          <p class="btn btn--qonto btn--lg mr-3">Ouvrir un compte</p>
          <p class="btn btn--gray btn--lg">Contacter l'équipe commerciale</p>
        </div>
        <p class="text-xs-home">30 jours gratuits - Sans engagement</p>
